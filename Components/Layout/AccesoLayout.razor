<div class="page d-flex align-items-center justify-content-center bg-body-tertiary">

    <main>
        <article class="content px-4 py-0 vh-100">
            <ErrorBoundary Context="Exception">
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent>
                    <ErrorComponent ex="Exception" />
                </ErrorContent>
            </ErrorBoundary>
        </article>
    </main>
</div>

