<div class="modal fade @(ShowModal ? "show d-block" : "d-none")" tabindex="-1" role="dialog" aria-modal="true" aria-labelledby="largeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                @if (!_isProgressBar)
                {
                    <div class="text-center">
                        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                            <span class="sr-only"></span>
                        </div>
                    </div>
                    <br />
                }
                <div class="text-center">
                    <label>@ViewMensaje</label>
                </div>
                @if (_isProgressBar)
                {
                    <div class="progress" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar progress-bar-striped bg-primary-custom" style="width: @(progreso)%"> @(progreso)% </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>